<div class="main user-show">
  <div class="container">
  <%=render 'users/show_user'%>

    <ul class="user-tabs">
      <li>
        <%= link_to("Posts #{@posts_count}", "/users/#{@user.id}") %>
      </li>
      <li class="active">
        <%= link_to("Likes #{@likes_count}", "/users/#{@user.id}/likes") %>
      </li>
      <li>
        <%= link_to "Following #{@user.following.count}", following_user_path%>
        <%# <%= link_to("Following #{@user.following.count}", "/users/#{@user.id}/following") %>
      </li>
      <li>
        <%= link_to "Followers #{@user.followers.count}", followers_user_path%>
      </li>
    </ul>

    <% @likes.each do |like|%>
      <%post=Post.find_by(id: like.post_id) %>
      <div class="posts-index-item">
        <div class="post-left">
          <img src="<%= "/user_images/#{post.user.image_name}" %>">
        </div>
        <div class="post-right">
          <div class="post-user-name">
            <%= link_to(post.user.name, "/users/#{post.user.id}") %>
          </div>
          <%= link_to(post.content, "/posts/#{post.id}") %>
        </div>
      </div>
    <% end %>
  </div>
</div>
